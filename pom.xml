			<groupId>com.ibm</groupId>
			<artifactId>IntegrationAPI</artifactId>
			<version>12.0.6</version>
			<!-- <scope>system</scope>
			<systemPath>${env.MQSI_BASE_FILEPATH}/common/classes/IntegrationAPI.jar</systemPath> -->
		</dependency>
		<!-- USED TO READ BAR AND OVERRIDE BAR-->
		<dependency>
			<groupId>com.ibm</groupId>
