	<name>ibm-maven-plugin</name>
	<description>Plugin mande for IBM ACE MQ AND APIC Projects to support build and deployment cycle</description>
	<url>https://github.com/jpcasas/ibm-maven-plugin.git</url>

	<scm>
		<connection>scm:git:git://github.com/jpcasas/ibm-maven-plugin.git</connection>
		<developerConnection>scm:git:git@github.com:jpcasas/ibm-maven-plugin.git</developerConnection>
