			<version>12.0.6</version>
			<!--<scope>system</scope>
			<systemPath>${env.MQSI_BASE_FILEPATH}/server/classes/brokerutil.jar</systemPath> -->
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
